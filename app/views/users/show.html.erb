<%= stylesheet_link_tag "application" %>

<%= render partial: "partials/userInfo", locals: { user: @user} %>

<div class='bio'>
    <span>Bio</span>
    <%= "#{@user.bio}" %>
</div>

<div class='posts'>
  <%= render partial: "partials/formPost", locals: { user: @user, post: @post} %>
  <% @user.most_recent_posts.each do |post| %>
    <%= render partial: "partials/postCard", locals: { user: @user, post: post} %>
  <% end %>
  <button type='button'>
    <%= link_to "Show all posts", user_posts_path(@user) %><br> 
  </button>

</div>
