<div class="form">
    <div class="form-head">Add new Post</div>
    <%= form_with model: @post, url: '/posts/create', scope: :post do |form| %>
      <%= form.text_field :title, placeholder: 'Enter post title', required: true %>
      <%= form.text_area :text, placeholder: 'Enter post text', required: true %>
      <%= form.submit "Submit post" %>
    <% end %>
</div>